TASKBIN="${PWD}/bin"
GOPATH="${PWD}/cache/go"
GOBIN="${GOPATH}/bin"
TASK="${TASKBIN}/task"

# install task
[[ -x "${TASK}" ]] || sh -c "$(curl --location https://taskfile.dev/install.sh)" -- -b "${TASKBIN}"

# export custom go environment
export GOPATH="${PWD}/cache/go"

# extend PATH
[[ $PATH != *${TASKBIN}* ]] && export PATH=${TASKBIN}:$PATH
[[ $PATH != *${GOBIN}* ]] && export PATH=${GOBIN}:$PATH
